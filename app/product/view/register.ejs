<!DOCTYPE html>
<html lang="pt-br">
    
<body>
    <div class="container">        
        <h2>Form</h2>
        <form class="container" action="/product/register" method="POST">
            <div class="form-group">
                <label for="name">Name</label>
                <input class="form-control" type="text" name="name" id="name" placeholder="Name">
            </div>
            <div class="form-group">
                <label for="email">Price</label>
                <input class="form-control" type="number" name="price" id="price" placeholder="price" required>
            </div>
            <div class="form-group">
                <label for="phone">Stock</label>
                <input class="form-control" type="number" name="stock" id="stock" placeholder="stock">
            </div>
        
            <div class="row">
                <div class="offset-5 col-4">
                    <button class="btn btn-primary" type="submit" id="btn-adicionar" >Adds</button>
                    <button class="btn btn-danger" type="reset" id="btn-limpar">clear</button>
                </div>
            </div>
         </form>
    </div>
</body>
</html>