<!DOCTYPE html>
<html lang="pt">

  <head>

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>Index</title>

    <!-- Bootstrap core CSS -->
    <link href="../vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">

    <!-- Custom styles for this template -->
    <link href="../css/heroic-features.css" rel="stylesheet">

  </head>

  <body>

    <!-- Navigation -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark fixed-top">
      <div class="container">
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarResponsive" aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarResponsive">
          <ul class="navbar-nav ml-auto">
            <li class="nav-item">
              <a class="nav-link" href="../index.html">Início</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="#">Compras</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="#">Rastrear encomendas</a>
            </li>
            <li class="nav-item active">
              <a class="nav-link" href="#">Perfil</a>
            </li>
          </ul>
        </div>
      </div>
    </nav>

    <!-- Page Content -->
    <div class="container">
      <% profile = profile[0] %>
      <header class="jumbotron my-4">
          <h1 class="display-3">Bem vindo ao seu perfil <%= profile.name %>!</h1>
          <p class="lead">Abaixo você pode editá-lo e visualizar suas compras realizadas.</p>
          
        </header>

      <div class="row">
        <div class="col-md-4 col-md-offset-4"></div>
        <div class="col-md-4 col-md-offset-4 mb-3">
          <form action="/update" method="POST">
            <div class="form-group">
              <input type="hidden" value="<%= profile._id %>" name="id">
              <label for="Name">Nome</label>
              <input type="text" name="name" value="<%= profile.name %>" required class="form-control mb-3">
      
              <label for="Email">Email</label>
              <input type="email" name="email" value="<%= profile.email %>" required class="form-control mb-3">
      
              <label for="Password">Senha</label>
              <input type="password" name="password" value="<%= profile.password %>" required class="form-control mb-3">
      
              <button type="submit" class="btn btn-success">Atualizar perfil</button>
      
            </div>
          </form>
        </div>
        <div class="col-md-4 col-md-offset-4"></div>
        
        <h1 class="display-5">Veja abaixo as suas compras</h1>

        <table class="table">
          <thead>
            <tr>
              <th scope="col">Nome</th>
              <th scope="col">Data</th>
              <th scope="col">Preço</th>
            </tr>
          </thead>
          <tbody>
            <% profile.orders.forEach(function(order){ %>
            <tr>
              <td>
                <%= order.name %>
              </td>
              <td>
                <%= order.date %>
              </td>
              <td>
                <%= order.price %>
              </td>
        
            </tr>
            <% }); %>
          </tbody>
        
        
        </table>


      </div>

      <!-- Page Features -->
      <div class="row text-center">

        <div class="col-lg-3 col-md-6 mb-4">
          
        </div>

        

      </div>
      <!-- /.row -->

    </div>
    <!-- /.container -->

    <!-- Footer -->
    <footer class="py-5 bg-dark">
      <div class="container">
        <p class="m-0 text-center text-white">Copyright &copy; Your Website 2018</p>
      </div>
      <!-- /.container -->
    </footer>

    <!-- Bootstrap core JavaScript -->
    <script src="vendor/jquery/jquery.min.js"></script>
    <script src="vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

  </body>

</html>
